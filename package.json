{
  "name": "vite-plugin-eslinter",
  "version": "0.1.0",
  "description": "",
  "main": "dist/main.js",
  "types": "dist/main.d.ts",
  "scripts": {
    "test": "vitest",
    "watch": "npm-watch",
    "build": "tsc && tsc-alias && cp -r src/html-formatter/templates dist/html-formatter/"
  },
  "watch": {
    "build": {
      "patterns": [
        "src"
      ],
      "extensions": "ts,html"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wai-lin/vite-plugin-eslinter.git"
  },
  "keywords": [
    "vite",
    "eslint",
    "linter",
    "vite-plugin",
    "vite-eslint",
    "vite-plugin-eslint"
  ],
  "author": "wai-lin",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/wai-lin/vite-plugin-eslinter/issues"
  },
  "homepage": "https://github.com/wai-lin/vite-plugin-eslinter#readme",
  "devDependencies": {
    "@types/eslint": "^8.4.2",
    "@types/node": "^17.0.31",
    "eslint": "^8.14.0",
    "npm-watch": "^0.11.0",
    "tsc-alias": "^1.6.7",
    "typescript": "^4.6.4",
    "vite": "^2.9.8",
    "vitest": "^0.10.2"
  }
}
